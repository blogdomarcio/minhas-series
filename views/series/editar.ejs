<%- include('../partials/header'); -%>


<section id="about">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2>Editar Serie</h2>
          
          
          <form method="POST">
            <div class="form-group">
              <label for="name">Nome da Série</label>
              <input type="text" class="form-control" id="name" name="name" aria-describedby="nameHelp" value="<%= serie.name %>">
              <small id="nameHelp" class="form-text text-muted">Digite o nome da série</small>
            </div>

            <div class="form-group">
               
              <select class="form-control" id="status" name="status">

                
                <% labels.forEach(label => { %>
                  <option value="<%= label.id %>" <% if(label.id === serie.status)  { %> selected="selected" <% } %> > <%= label.name %></option>
                  <% }) %>
                 
                
              </select>
            </div>

            <% if(errors) { %>

              <div class="alert alert-warning" role="alert">
                Por favor informe o nome da série!
              </div>

              <% } %>
            

            <button type="submit" class="btn btn-primary">Cadastrar</button>

            </form>
        </div>
      </div>
    </div>
  </section>

 



<%- include('../partials/footer'); -%>